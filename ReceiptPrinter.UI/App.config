<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- Database connection string for  database -->
	<connectionStrings>
		<add name="receiptreprint.Properties.Settings.ConnectionString"
             connectionString="Data Source=;Initial Catalog=;Persist Security Info=True;User ID=;Password=;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=true;"
             providerName="System.Data.SqlClient" />
	</connectionStrings>

	<!-- Application settings -->
	<appSettings>
		<!-- Directory for log files -->
		<add key="LogDirectory" value="Logs"/>

		<!-- Number of days to retain log files -->
		<add key="LogRetentionDays" value="30"/>

		<!-- Minimum log level (DEBUG, INFO, WARNING, ERROR, FATAL) -->
		<add key="MinimumLogLevel" value="INFO"/>

		<!-- Default font size for receipts -->
		<add key="DefaultFontSize" value="10"/>

		<!-- Default store ID -->
		<add key="DefaultStoreID" value="1"/>
	</appSettings>
</configuration>
